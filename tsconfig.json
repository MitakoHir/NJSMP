{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "*": [
        "node_modules/*"
      ]
//      "@utils/*": ["src/app/utils/*"],
//      "@project-types/*": ["src/app/types/*"],
//      "@controllers/*": ["src/app/controllers/*"],
//      "@storage/*": ["src/app/storage/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
